<!-- Bu  kısmi görünüm sayfası department, assistant ve professor sayfaları için ortak kullanılacak CSS kodlarını tanımlar -->

    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .card {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 300px;
        padding: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

        .card img {
            width: 100%;
            border-radius: 8px 8px 0 0;
        }

        .card h3 {
            font-size: 1.5em;
            margin: 10px 0;
            color: #333333;
        }

        .card p {
            font-size: 1em;
            color: #666666;
            line-height: 1.5;
        }

        .card button {
            margin-top: 10px;
            padding: 10px 15px;
            background-color: #ffdb4d;
            color: #332900;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .card button:hover {
                background-color: #e6b800;
            }

        .information{
            padding: 2px 15px;
        }
